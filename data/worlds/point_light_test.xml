<?xml version="1.0" encoding="UTF-8" ?>
<World>
	<!-- Level Geometry -->
	<Entity>
		<Position x="0" y="0" z="0"/>
		<Rotation x="180" y="90" z="0"/>
		<Scale x="1" y="1" z="1"/>
		<MeshComponent>
			<Model filename="models/common_floor.dae"/>
		</MeshComponent>
		<RigidBodyComponent>
			<Static value="true"/>
		</RigidBodyComponent>
		<BoxShapeComponent>
			<Size x="20" y="1" z="20"/>
		</BoxShapeComponent>
	</Entity>
	
	<!-- Test animated model -->
	<Entity>
		<Position x="1.2" y="0" z="1.2"/>
		<Rotation x="0" y="0" z="0"/>
		<Scale x="1" y="1" z="1"/>
		<AnimatedMeshComponent>
			<Model filename="models/test_enemy.glb"/>
		</AnimatedMeshComponent>
		<TestAnimationComponent>
			<AnimationName value="idle"/>
		</TestAnimationComponent>
	</Entity> 
	
	<!-- Test point light -->
	<Entity>
		<Position x="0" y="1" z="0"/>
		<Rotation x="0" y="0" z="0"/>
		<Scale x="1" y="1" z="1"/>
		<PointLightComponent>
			<AmbientColor r="0.501" g="0.443" b="0.337"/>
			<Color r="0.678" g="0.596" b="0.427"/>
			<SpecularColor r="0.678" g="0.596" b="0.427"/>
			<Radius value="12"/>
		</PointLightComponent>
	</Entity> 
	
	<!-- Test entity with skysphere -->
	<Entity>
		<Position x="0" y="0" z="0"/>
		<Rotation x="0" y="90" z="0"/>
		<Scale x="1000" y="1000" z="1000"/>
		<MeshComponent>
			<Model filename="models/test_sky_half.dae"/>
		</MeshComponent>
	</Entity>
	
	<!-- Test entity with directional light -->
	<Entity>
		<Position x="0" y="0" z="0"/>
		<Rotation x="0" y="20" z="0"/>
		<Scale x="1" y="1" z="1"/>
		
		<DirectionalLightComponent>
			<AmbientColor r="0.501" g="0.443" b="0.337"/>
			<Color r="0.678" g="0.596" b="0.427"/>
		</DirectionalLightComponent>
	</Entity>
	
	<!-- Player -->
	<Entity>
		<Position x="10" y="100" z="10"/>
		<Rotation x="0" y="0" z="0"/>
		<Scale x="1" y="1" z="1"/>
		<ShockPlayerController/>
	</Entity>
</World>